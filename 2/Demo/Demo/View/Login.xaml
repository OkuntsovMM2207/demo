<Window x:Class="Demo.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo.View"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин:" Margin="5" />
            <TextBox x:Name="loginTextBox" Margin="5" />

            <TextBlock Text="Пароль:" Margin="5" />
            <PasswordBox x:Name="passwordBox" Margin="5" />

            <Button Content="Войти" Width="100" Margin="10" HorizontalAlignment="Center" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
